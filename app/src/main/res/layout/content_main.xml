<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="2"
    android:padding="20dp"
    android:orientation="vertical"
    tools:showIn="@layout/activity_main">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <gulshansutey.oldmirrorimageview.RoundCanvas
            android:layout_width="200dp"
            android:layout_centerInParent="true"
            app:its_stroke_width="3dp"
            app:its_stroke_color="@color/textColorPrimary"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/round_canvas"
            app:its_tint_color_state_drawable="@color/mi_color_selector"
            app:srcCompat="@drawable/image2"
            android:layout_height="200dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <gulshansutey.oldmirrorimageview.RoundCanvas
            android:layout_width="200dp"
            app:its_stroke_width="4dp"
            app:its_stroke_color="@color/colorPrimaryDark"
            android:focusable="true"
            android:id="@+id/round_canvas2"
            android:clickable="true"
            android:layout_centerInParent="true"
            android:src="@drawable/image"
            android:layout_height="200dp" />

    </RelativeLayout>





</LinearLayout>